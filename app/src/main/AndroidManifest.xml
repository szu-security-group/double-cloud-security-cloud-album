<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sca">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:required="true" />

    <permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestApplication"
        tools:targetApi="n">
        <activity
            android:name="com.example.sca.ui.cloud.primary.transfer.StrategyGenActivity"
            android:exported="false" />
        <activity
            android:name="com.example.sca.ui.cloud.primary.transfer.ShareActivity"
            android:exported="false" />
        <activity
            android:name="com.example.sca.ui.local.ImageDisplay"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.example.sca.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.cloud.primary.bucket.BucketAddActivity"
            android:label="@string/bucket_add_title" />
        <activity
            android:name=".ui.cloud.primary.region.RegionActivity"
            android:label="@string/region" />
        <activity
            android:name=".ui.cloud.primary.object.ObjectActivity"
            android:label="@string/object_title" />
        <activity
            android:name="com.example.sca.ui.cloud.primary.transfer.UploadActivity"
            android:label="@string/upload_title" />
        <activity
            android:name="com.example.sca.ui.cloud.primary.transfer.DownloadActivity"
            android:label="@string/download_title" />
        <activity
            android:name="com.example.sca.ui.cloud.primary.CloudImageDisplay"
            android:label="@string/cloud_display_title" />
        <activity
            android:name="com.example.sca.ui.Share.ReceiveActivity"
            android:exported="true" />
        <activity android:name="com.example.sca.ui.Share.KeyGenActivity" />
        <activity android:name=".ui.cloud.backup.OssBackupSync"
            android:label="同步"/>
        <activity android:name=".ui.cloud.primary.AuditActivity"
            android:label="审计"/>


    </application>

</manifest>